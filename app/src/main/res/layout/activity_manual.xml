<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manual"
    android:background="@color/fontCafe"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarManual"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        app:title="@string/manual"
        android:background="@color/BarCafe">

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:cardCornerRadius="20dp"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/semifont">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:textAlignment="center"
           android:fontFamily="serif"
           android:textColor="@color/black"
           android:textColorHint="@color/black"
           android:textSize="30dp"
           android:layout_marginTop="20dp"
           android:text="Ingresa los dias de secado"/>

       <EditText
           android:layout_width="300dp"
           android:layout_height="80dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="110dp"
           android:layout_marginLeft="30dp"
           android:textSize="20dp"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:elevation="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="30dp"
            android:text="Ingresa las veces de movimientos al dia" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:elevation="5dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="450dp"
            android:text="Iniciar"
            android:textSize="30dp"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>